<div class="blog my-16 px-6">
   <!-- BLOG SECTION -->
    <div class="bg-white">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">From the blog</h2>
        <p class="mt-2 text-lg leading-8 text-gray-600">Learn how to grow your business with our expert advice.</p>
        </div>
        <div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        <!-- Iterate over blog posts -->
        {% for post in collections.blog %}
            <article class="flex max-w-xl flex-col items-start justify-between">
            <a href="{{ post.url }}" class="group block">
                <div class="w-full">
                <img src="{{ post.data.featured_image }}" alt="{{ post.data.title }}" class="w-full max-h-48 rounded-lg object-cover">
                </div>
                <div class="mt-3">
                <h3 class="text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
                    {{ post.data.title }}
                </h3>
                <p class="mt-1 text-sm leading-6 text-gray-600 line-clamp-3">{{ post.content | safe | truncate(150) }}</p>
                </div>
            </a>
            <div class="flex items-center gap-x-4 text-xs mt-2">
                <time datetime="{{ post.date | dateFormat('yyyy-MM-dd') }}" class="text-gray-500">
                {{ post.date | dateFormat('MMM dd, yyyy') }}
                </time>
                <span class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">{{ post.category }}</span>
            </div>
            <div class="relative mt-8 flex items-center gap-x-4">
                <img src="{{ post.data.author_image }}" alt="{{ post.data.author }}" class="h-10 w-10 rounded-full bg-gray-50">
                <div class="text-sm leading-6">
                <p class="font-semibold text-gray-900">{{ post.data.author }}</p>
                <p class="text-gray-600">{{ post.author_role }}</p>
                </div>
            </div>
            </article>
        {% endfor %}
        </div>
    </div>
    </div>
<!-- END BLOG SECTION -->

</div>